{
  // ==============================
  // AI Completion & Prediction
  // ==============================
  "ssh_connections": [
    {
      "host": "server",
      "projects": [
        {
          "paths": ["/home/narender"]
        }
      ]
    }
  ],
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "show_call_status_icon": true,
  "icon_theme": "Catppuccin Latte",
  "agent": {
    "play_sound_when_agent_done": false,
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "model_parameters": [],
    "default_width": 500,
    "stream_edits": true,
    "enable_feedback": true,
    "notify_when_agent_waiting": "all_screens",
    "default_model": {
      "provider": "Perplexity",
      "model": "sonar-pro"
    },
    "button": true,
    "preferred_completion_mode": "normal",
    "enabled": true
  },
  "language_models": {
    "openai_compatible": {
      "LocalAI": {
        "api_url": "http://192.168.2.3:8181",
        "available_models": [
          {
            "name": "sonar-pro",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": true,
              "prompt_cache_key": true
            }
          },
          {
            "name": "sonar-reasoning",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": true,
              "prompt_cache_key": true
            }
          }
        ]
      }
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "show_edit_predictions": true,
  "completions": {
    "lsp": true,
    "lsp_fetch_timeout_ms": 10000,
    "lsp_insert_mode": "replace",
    "words": "disabled"
  },
  "edit_predictions": {
    "disabled_globs": [
      "**/node_modules/**",
      "**/dist/**",
      "**/out/**",
      "**/.next/**",
      "**/.storybook/**",
      "**/.vscode-test/**",
      "**/.vscode/**",
      "**/.tap/**",
      "**/.nyc_output/**",
      "**/report/**"
    ],
    "mode": "eager",
    "enabled_in_text_threads": true
  },
  // ==============================
  // General Editor Preferences
  // ==============================
  "base_keymap": "VSCode",
  "ui_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "agent_font_size": 13,
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "One Dark"
  },
  "soft_wrap": "editor_width",
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "relative_line_numbers": true,
  "show_whitespaces": "boundary",
  "show_signature_help_after_edits": true,
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "use_auto_surround": true,
  "restore_on_startup": "last_session",
  "unstable.ui_density": "comfortable",
  // ==============================
  // File Handling & Autosave
  // ==============================
  "autosave": "on_focus_change",
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules",
    "**/__pycache__",
    "**/.venv",
    "**/.ruff_cache",
    "**/.ropeproject",
    "**/.pytest_cache",
    "**/.jj"
  ],
  "formatter": "language_server",
  // ==============================
  // Language & LSP Configuration
  // ==============================
  "enable_language_server": true,
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      // "debuggers": [
      //   "Debugpy"
      // ],
      "language_servers": ["ruff", "pyright", "!basedpyright", "!pyrefly"]
    }
  },
  // ==============================
  // UI Panels & Layout
  // ==============================
  "hide_mouse": "on_typing",
  "cursor_blink": false,
  "tab_bar": {
    "show": true
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "bottom_dock_layout": "contained",
  "collaboration_panel": {
    "button": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": null,
    "inline_blame": {
      "min_column": 80
    },
    "hunk_style": "staged_hollow"
  },
  "git_panel": {
    "button": false
  },
  "project_panel": {
    "button": true,
    "auto_fold_dirs": false,
    "default_width": 310,
    "entry_spacing": "comfortable",
    "file_icons": true,
    "indent_size": 25,
    "auto_reveal_entries": true,
    "scrollbar": {
      "show": "always"
    },
    "folder_icons": true,
    "hide_root": false,
    "indent_guides": {
      "show": "always"
    }
  },
  "outline_panel": {
    "button": true,
    "dock": "right",
    "scrollbar": {
      "show": "never"
    },
    "auto_fold_dirs": false
  },
  "notification_panel": {
    "button": false
  },
  // ==============================
  // Terminal Configuration
  // ==============================
  "terminal": {
    "working_directory": "current_project_directory",
    "env": {
      "EDITOR": "zed --wait"
    },
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    },
    "blinking": "off",
    "button": false,
    "default_height": 250,
    "cursor_shape": "bar",
    "toolbar": {
      "breadcrumbs": false
    },
    "copy_on_select": true
  },
  // ==============================
  // Debugger Settings
  // ==============================
  "debugger": {
    "button": true,
    "dock": "left",
    "format_dap_log_messages": true,
    "log_dap_communications": false,
    "save_breakpoints": true,
    "stepping_granularity": "line",
    "timeout": 2000
  },
  // ==============================
  // UI Elements & Decorations
  // ==============================
  "toolbar": {
    "breadcrumbs": true,
    "selections_menu": false,
    "quick_actions": false,
    "code_actions": false
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_sign_in": false,
    "show_user_picture": true
  },
  "tabs": {
    "activate_on_close": "neighbour",
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "show_close_button": "always",
    "show_diagnostics": "off"
  },
  "scrollbar": {
    "show": "never"
  },
  "minimap": {
    "current_line_highlight": "line",
    "display_in": "all_editors",
    "show": "auto",
    "thumb": "hover",
    "thumb_border": "full"
  },
  "indent_guides": {
    "active_line_width": 2,
    "coloring": "indent_aware",
    "enabled": true
  },
  "inlay_hints": {
    "enabled": true,
    "edit_debounce_ms": 0,
    "scroll_debounce_ms": 0,
    "show_background": true,
    "show_other_hints": true,
    "show_parameter_hints": true,
    "show_type_hints": true,
    "show_value_hints": false
  },
  // ==============================
  // Miscellaneous
  // ==============================
  "load_direnv": "direct",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "file_finder": {
    "file_icons": true,
    "git_status": true
  }
}
