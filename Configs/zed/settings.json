{
  // ==============================
  // AI Completion & Prediction
  // ==============================
  "ssh_connections": [
    {
      "host": "server",
      "projects": [
        {
          "paths": [
            "/home/narender"
          ]
        }
      ]
    }
  ],
  "context_servers": {
    "postgres-context-server": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "database_url": "postgresql://someuser:somepassword@localhost:5432/mydatabase"
      }
    }
  },
  "icon_theme": "Zed (Default)",
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "model_parameters": [],
    "default_width": 310,
    "stream_edits": true,
    "enable_feedback": false,
    "notify_when_agent_waiting": "all_screens",
    "default_model": {
      "provider": "LocalAI",
      "model": "sonar-reasoning"
    },
    "button": true,
    "preferred_completion_mode": "normal",
    "enabled": true
  },
  "language_models": {
    "openai_compatible": {
      "LocalAI": {
        "api_url": "http://192.168.2.3:8181",
        "available_models": [
          {
            "name": "sonar-reasoning",
            "display_name": "sonar-reasoning",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": true,
              "prompt_cache_key": true
            }
          },
          {
            "name": "sonar-pro",
            "display_name": "sonar-pro",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": true,
              "prompt_cache_key": true
            }
          },
        ]
      }
    },
    "openai": {
      "available_models": [
        {
          "name": "gpt-5",
          "display_name": "gpt-5 high",
          "reasoning_effort": "high",
          "max_tokens": 272000,
          "max_completion_tokens": 20000
        },
        {
          "name": "gpt-4o-2024-08-06",
          "display_name": "GPT 4o Summer 2024",
          "max_tokens": 128000
        }
      ]
    }
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "show_edit_predictions": true,
  "completions": {
    "lsp": true,
    "lsp_fetch_timeout_ms": 3000,
    "lsp_insert_mode": "replace",
    "words": "disabled"
  },
  "edit_predictions": {
    "disabled_globs": [
      "**/node_modules/**",
      "**/dist/**",
      "**/out/**",
      "**/.next/**",
      "**/.storybook/**",
      "**/.vscode-test/**",
      "**/.vscode/**",
      "**/.tap/**",
      "**/.nyc_output/**",
      "**/report/**"
    ],
    // "mode": "subtle",
    "enabled_in_text_threads": true
  },
  // ==============================
  // General Editor Preferences
  // ==============================
  "base_keymap": "VSCode",
  "ui_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "ui_font_size": 13,
  "buffer_font_size": 13,
  "agent_font_size": 11,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Soft",
    "dark": "One Dark"
  },
  "soft_wrap": "editor_width",
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "relative_line_numbers": true,
  "show_whitespaces": "boundary",
  "show_signature_help_after_edits": true,
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "use_auto_surround": true,
  "restore_on_startup": "last_session",
  "unstable.ui_density": "comfortable",
  // ==============================
  // File Handling & Autosave
  // ==============================
  "autosave": "on_focus_change",
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules",
    "**/__pycache__",
    "**/.venv",
    "**/.ruff_cache",
    "**/.ropeproject",
    "**/.pytest_cache",
    "**/.jj"
  ],
  "formatter": "language_server",
  // ==============================
  // Language & LSP Configuration
  // ==============================
  "enable_language_server": true,
  "languages": {
    "PowerShell": {
      "format_on_save": "off"
    },
    "Python": {
      "format_on_save": "language_server",
      // "formatter": "language_server",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "debuggers": [
        "debugpy"
      ],
      "language_servers": [
        "ruff",
        // "pyrefly",
        "pyright"
      ]
    }
  },
  "lsp": {
    "ruff": {
      "enable_lsp_tasks": true,
      "settings": {
        "args": [
          "server",
          "--experimental",
          "--enable",
          "all"
        ]
      }
    },
    "pyrefly": {
      "settings": {
        "python_interpreter": ".venv/Scripts/python.exe",
        "project_includes": [
          "tfm_sentry",
          "tfm_sentry/ui",
          "tfm_sentry/common"
        ],
        "search_path": [
          "tfm_sentry"
        ],
        "ignore_errors_in_generated_code": true
      },
      "enable_lsp_tasks": true
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "off"
        }
      },
      "enable_lsp_tasks": true
    },
    "bash-language-server": {
      "binary": {
        "path": "node",
        "arguments": [
          "C:\\Users\\narendersingh\\AppData\\Local\\Zed\\extensions\\work\\basher\\node_modules\\bash-language-server\\out\\cli.js",
          "start"
        ]
      },
      "enable_lsp_tasks": true
    },
    "powershell-es": {
      "binary": {
        "path": "C:\\Users\\narendersingh\\.scoop\\apps\\pwsh\\current\\pwsh.exe",
        "arguments": [
          "-NoLogo",
          "-NoProfile",
          "-File",
          "C:\\Users\\narendersingh\\AppData\\Local\\Zed\\extensions\\work\\powershell\\powershell-es-v4.3.0\\PowerShellEditorServices\\Start-EditorServices.ps1",
          "-HostName",
          "Zed",
          "-HostProfileId",
          "Zed",
          "-LogLevel",
          "Normal",
          "-BundledModulesPath",
          "C:\\Users\\narendersingh\\AppData\\Local\\Zed\\extensions\\work\\powershell\\powershell-es-v4.3.0\\PowerShellEditorServices",
          "-Stdio"
        ]
      },
      "enable_lsp_tasks": true
    }
  },
  // ==============================
  // UI Panels & Layout
  // ==============================
  "hide_mouse": "on_typing",
  "cursor_blink": false,
  "tab_bar": {
    "show": true
  },
  "preview_tabs": {
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "bottom_dock_layout": "contained",
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": null,
    "inline_blame": {
      "min_column": 80
    },
    "hunk_style": "staged_hollow"
  },
  "git_panel": {
    "button": false
  },
  "project_panel": {
    "button": true,
    "auto_fold_dirs": false,
    "default_width": 310,
    "entry_spacing": "comfortable",
    "file_icons": true,
    "indent_size": 25,
    "auto_reveal_entries": true,
    "scrollbar": {
      "show": "always"
    },
    "folder_icons": true,
    "hide_root": false,
    "indent_guides": {
      "show": "always"
    }
  },
  "outline_panel": {
    "button": true,
    "dock": "right",
    "scrollbar": {
      "show": "never"
    },
    "auto_fold_dirs": false
  },
  "notification_panel": {
    "button": false
  },
  // ==============================
  // Terminal Configuration
  // ==============================
  "terminal": {
    "working_directory": "current_project_directory",
    "env": {
      "EDITOR": "zed --wait"
    },
    "detect_venv": {
      "on": {
        "directories": [
          ".env",
          "env",
          ".venv",
          "venv"
        ],
        // "activate_script": "power_shell"
      }
    },
    "blinking": "off",
    "button": false,
    "default_height": 250,
    // "shell": {
    //   "with_arguments": {
    //     // "program": "C:\\Users\\narendersingh\\.scoop\\apps\\pwsh\\current\\pwsh.exe",
    //     "program": "pwsh.exe",
    //     "args": [
    //       "-NoLogo"
    //     ],
    //     "title_override": "Shell"
    //   }
    // },
    "cursor_shape": "bar",
    "toolbar": {
      "breadcrumbs": false
    },
    "copy_on_select": true
  },
  // ==============================
  // Debugger Settings
  // ==============================
  "debugger": {
    "button": true,
    "dock": "bottom",
    "format_dap_log_messages": true,
    "log_dap_communications": false,
    "save_breakpoints": true,
    "stepping_granularity": "line",
    "timeout": 2000
  },
  // ==============================
  // UI Elements & Decorations
  // ==============================
  "toolbar": {
    "breadcrumbs": true,
    "selections_menu": false,
    "quick_actions": false,
    "code_actions": false
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_sign_in": false,
    "show_user_picture": true
  },
  "tabs": {
    "activate_on_close": "neighbour",
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "show_close_button": "always",
    "show_diagnostics": "off"
  },
  "scrollbar": {
    "show": "never"
  },
  "minimap": {
    "current_line_highlight": "line",
    "display_in": "all_editors",
    "show": "always",
    "thumb": "hover",
    "thumb_border": "full"
  },
  "indent_guides": {
    "active_line_width": 2,
    "coloring": "indent_aware",
    "enabled": true
  },
  "inlay_hints": {
    "enabled": true,
    "edit_debounce_ms": 0,
    "scroll_debounce_ms": 0,
    "show_background": true,
    "show_other_hints": true,
    "show_parameter_hints": true,
    "show_type_hints": true,
    "show_value_hints": false
  },
  // ==============================
  // Miscellaneous
  // ==============================
  "load_direnv": "shell_hook",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "file_finder": {
    "file_icons": true,
    "git_status": true
  }
}
