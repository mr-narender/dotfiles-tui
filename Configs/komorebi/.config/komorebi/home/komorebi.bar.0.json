{
    "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.37/schema.bar.json",
    "monitor": 0,
    "font_family": "Iosevka Nerd Font Mono",
    "theme":
    {
        "palette": "Base16",
        "name": "Ashes",
        "accent": "Base0D"
    },
    "left_widgets":
    [
        {
            "Komorebi":
            {
                "workspaces":
                {
                    "enable": true,
                    "hide_empty_workspaces": false
                },
                "layout":
                {
                    "enable": true
                },
                "focused_window":
                {
                    "enable": true,
                    "show_icon": true
                }
            }
        }
    ],
    "right_widgets":
    [
        {
            "Update":
            {
                "enable": true
            }
        },
        {
            "Media":
            {
                "enable": false
            }
        },
        {
            "Storage":
            {
                "enable": false
            }
        },
        {
            "Memory":
            {
                "enable": false
            }
        },
        {
            "Network":
            {
                "enable": true,
                "show_total_data_transmitted": false,
                "show_network_activity": false
            }
        },
        {
            "Date":
            {
                "enable": true,
                "format": "DayDateMonthYear"
            }
        },
        {
            "Time":
            {
                "enable": true,
                "format": "TwelveHour"
            }
        },
        {
            "Battery":
            {
                "enable": true
            }
        }
    ]
}